<script>
  function validateForm(event) {
    const form = event.target.form;

    if (form.checkValidity() === false) {
      event.preventDefault();
      event.stopPropagation();
    }

    form.classList.add("was-validated");
  }
</script>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const optionsList = document.getElementById("options");
    const informationDiv = document.getElementById("information");
    const settingsDiv = document.getElementById("settings");
    const editDetailsDiv = document.getElementById("editDetails");

    // Initially hide the settings and editDetails divs
    settingsDiv.hidden = true;
    editDetailsDiv.hidden = true;

    optionsList.addEventListener("click", (event) => {
      const targetLi = event.target.closest("li");
      if (!targetLi) return;

      const targetDivId = targetLi.dataset.target;
      if (!targetDivId) return;

      informationDiv.hidden = targetDivId !== "information";
      settingsDiv.hidden = targetDivId !== "settings";
      editDetailsDiv.hidden = targetDivId !== "editDetails";
    });
  });
</script>
